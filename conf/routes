# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.at(path="/public", file)

GET         /                       controllers.gateway.ApplicationController.index

GET         /gateway/login          controllers.gateway.GatewayLoginController.showLogin
POST        /gateway/login          controllers.gateway.GatewayLoginController.handleLogin
GET         /gateway/logout         controllers.gateway.GatewayLoginController.logout

POST        /oauth/token           controllers.security.OAuth2Controller.accessToken
GET         /oauth/authorize        controllers.gateway.ClaimAuthController.auth(scope:String, clientId:String, redirectURI :String)

GET         /oauth/confirm          controllers.gateway.ClaimAuthController.confirm(empref:String, clientId:String, redirectURI :String)
GET         /oauth/deny             controllers.gateway.ClaimAuthController.deny(redirectURI :String)