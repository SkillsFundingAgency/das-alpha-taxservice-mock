# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

GET         /                        controllers.gateway.ApplicationController.index

GET         /gateway/sign-in         controllers.gateway.GatewaySignInController.showSignIn
POST        /gateway/sign-in         controllers.gateway.GatewaySignInController.handleSignIn
GET         /gateway/sign-out        controllers.gateway.GatewaySignInController.signOut

POST        /oauth/token             controllers.security.OAuth2Controller.accessToken
GET         /oauth/authorize         controllers.gateway.ClaimAuthController.auth(scope:String, clientId:String, redirectURI :String, state:Option[String])

GET         /oauth/confirm           controllers.gateway.ClaimAuthController.confirm(empref:String, clientId:String, redirectURI :String, state:Option[String])
GET         /oauth/deny              controllers.gateway.ClaimAuthController.deny(redirectURI :String)