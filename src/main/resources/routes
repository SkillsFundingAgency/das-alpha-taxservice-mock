# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)

GET         /                                uk.gov.bis.controllers.gateway.ApplicationController.index

GET         /gateway/sign-in                 uk.gov.bis.controllers.gateway.GatewaySignInController.showSignIn
POST        /gateway/sign-in                 uk.gov.bis.controllers.gateway.GatewaySignInController.handleSignIn
GET         /gateway/sign-out                uk.gov.bis.controllers.gateway.GatewaySignInController.signOut

POST        /oauth/token                     uk.gov.bis.controllers.security.OAuth2Controller.accessToken
GET         /oauth/authorize                 uk.gov.bis.controllers.gateway.ClaimAuthController.authorize(scope:Option[String], client_id:String, redirect_uri :String, state:Option[String])

GET         /admin                           uk.gov.bis.controllers.admin.AdminController.index()
GET         /admin/applications              uk.gov.bis.controllers.admin.AdminController.applications()
POST        /admin/add-application           uk.gov.bis.controllers.admin.AdminController.addApplication()
GET         /admin/remove-application        uk.gov.bis.controllers.admin.AdminController.removeApplication(id:String)