# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

GET         /gg/sign-in              uk.gov.bis.taxserviceMock.controllers.gateway.GatewaySignInController.show(continue: String, origin: Option[String])
POST        /gg/sign-in              uk.gov.bis.taxserviceMock.controllers.gateway.GatewaySignInController.handleSignIn(continue: String, origin: Option[String])

GET         /gg/access-code          uk.gov.bis.taxserviceMock.controllers.gateway.AccessCodeController.show(continue: String, origin: Option[String])
POST        /gg/access-code          uk.gov.bis.taxserviceMock.controllers.gateway.AccessCodeController.handleAccessCode(continue: String, origin: Option[String])

GET         /oauth/grantscope        uk.gov.bis.taxserviceMock.controllers.gateway.GrantScopeController.show(auth_id: Long)
POST        /oauth/grantscope        uk.gov.bis.taxserviceMock.controllers.gateway.GrantScopeController.grantScope(auth_id: Long)

