# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)

GET         /gateway/sign-in            uk.gov.bis.taxserviceMock.controllers.gateway.GatewaySignInController.showSignIn
POST        /gateway/sign-in            uk.gov.bis.taxserviceMock.controllers.gateway.GatewaySignInController.handleSignIn
GET         /gateway/sign-out           uk.gov.bis.taxserviceMock.controllers.gateway.GatewaySignInController.signOut
GET         /gateway/access-code        uk.gov.bis.taxserviceMock.controllers.gateway.AccessCodeController.show
POST        /gateway/access-code        uk.gov.bis.taxserviceMock.controllers.gateway.AccessCodeController.handleAccessCode

GET         /oauth/grantscope           uk.gov.bis.taxserviceMock.controllers.gateway.GrantScopeController.show(auth_id: String)
POST        /oauth/grantscope           uk.gov.bis.taxserviceMock.controllers.gateway.GrantScopeController.grantScope(auth_id: String)

